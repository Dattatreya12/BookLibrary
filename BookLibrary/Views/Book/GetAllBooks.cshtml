@model IEnumerable<BookLibrary.Models.BookModel>
@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section breadcrumb
{
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="~/Home/index">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page">GetAllBooks</li>
        </ol>
    </nav>
}



<div class="container">
    <h3 class="display-3 text-center font-weight-bold">All Books</h3>
    <h4>No Of books Available in Cart:@ViewData["count"]</h4>
    <div class="row">

        @foreach (var book in Model)
        {
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    <svg class="bd-placeholder-img card-img-top" width="100%" height="225"></svg>
                    <div class="card-body">
                        <h3 class="card-title font-weight-bold">@book.Title</h3>
                        <p><b>Prcie</b>:@book.price<span>Rs</span></p>
                        <p class="card-text"><b>Description</b>:@book.Description</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a href="/Book/GetBook/@book.Id" class="btn btn-sm btn-outline-secondary">View Details</a>
                            </div>
                            <small class="text-muted"><b>Author</b>:@book.Author</small>
                        </div>
                     
                    </div>
                </div>
            </div>
        }
    </div>
</div>