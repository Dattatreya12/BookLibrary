<h3>Buy Your Book Here (OR) Add to Cart</h3>
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <div id="carouselExampleIndicators" class="carousel slide shadow-lg" data-ride="carousel">
                <ol class="carousel-indicators">
                    @for (int i = 0; i < Model.Gallery.Count(); i++)
                    {
                        <li data-target="#carouselExampleIndicators" data-slide-to="@i" class="@(i==0 ? "active" : "")"></li>
                    }
                </ol>

                <div class="carousel-inner">

                    @for (int i = 0; i < Model.Gallery.Count(); i++)
                    {
                        <div class="@(i==0 ? "carousel-item active" : "carousel-item")">
                            <img src="@Model.Gallery[i].URL" class="d-block w-100" alt="@Model.Gallery[i].Name">
                        </div>
                    }
                   
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card-body shadow-lg">
                <h4 class="card-title font-weight-bold"><b>Book Title</b>:@Model.Title</h4>
                <p class="card-text"><b>Book Price</b>:@Model.price</p>
                <p class="card-text"><b>Book Author</b>:@Model.Author</p>
                <p class="card-text"><b>Book Description</b>:@Model.Description</p>
                <button type="submit" class="btn btn-success">BUY</button>
                <a class="btn btn-danger" asp-area="" asp-controller="Book" asp-action="GetAllBooks">Cancel</a>
                <a href="/Book/GetBook/@Model.Id" class="btn btn-info">Add Cart</a>
            </div>
        </div>

    </div>
</div>
